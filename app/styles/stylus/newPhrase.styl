.content-wrapper
  .addPhrase
    padding .4em 0
    width 100%
    float left
    display none

    // &.open
    //   display block

    button
      materialButton()
      display block
      margin 0 auto .5em
      font-size 2.5em
      line-height 1em
      border none
      outline none
      cursor pointer

  .newPhrase
    float left
    // height 0
    width 100%
    // position relative
    // z-index 2
    // margin-bottom -69px
    // margin-top 0
    overflow hidden
    transition height $time ease-in-out margin-top $time ease-in-out margin-bottom $time ease-in-out

    &.open
      height 100px
      margin-bottom 0
      // margin-top -100px

    input
      border none
      font-size 1em
      padding 1em 2em
      width auto
      outline none
      height 100px
      width 500px
      float left
      background #FFF

      &.target
        display none

    a.icon.save
      // position relative
      // z-index 1
      background #fdfdfd
      color $hover
      font-size 0.7em
      width 70px
      border-radius 100%
      height 70px
      float right
      padding .9em 0
      text-align center
      box-shadow 0 2px 0 #eee
      cursor pointer
      font-weight 700
      text-shadow 0 1px darken($hover, 25%)
      line-height .6em
      padding .5em
      font-size 2.3em
      margin 15px

      &:hover
        box-shadow 0 3px 0 #e9e9e9
        background #fff

      &.saveTarget
        display none