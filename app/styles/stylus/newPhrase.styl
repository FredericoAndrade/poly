.content-wrapper
  .addPhrase
    padding .4em 0
    position fixed
    z-index 10
    left 50%
    transform translateX(-50%)
    bottom 0

    button
      materialButton()
      display block
      margin 0 auto .5em
      font-size 2em
      line-height 1em
      border none
      outline none
      cursor pointer

  .newPhrase
    float left
    width 100%
    box-shadow 0 -1px 2px rgba(0,0,0,0.1)
    overflow hidden
    transition height $time ease-in-out margin-top $time ease-in-out margin-bottom $time ease-in-out

    input
      border none
      font-size 1em
      padding 1em 2em
      width auto
      outline none
      height 80px
      width 500px
      float left
      background #FFF

    a.savePhrase
      color #4799FC
      width 100px
      text-align center
      font-weight 400
      margin-top 26px
      display inline-block
      pointer cursor

      img
        float left


    a.icon.save
      background #fdfdfd
      color $hover
      font-size 0.7em
      width 70px
      border-radius 100%
      height 70px
      float right
      padding .9em 0
      text-align center
      box-shadow 0 2px 0 #eee
      cursor pointer
      font-weight 700
      text-shadow 0 1px darken($hover, 25%)
      line-height .6em
      padding .5em
      font-size 2.3em
      margin 15px

      &:hover
        box-shadow 0 3px 0 #e9e9e9
        background #fff