/* ----------- iPhone 6 ----------- */

/* Portrait and Landscape */
@media only screen and (min-device-width 375px) and (max-device-width 667px) and (-webkit-min-device-pixel-ratio 2)
  html
    width 700px
    font-size 26px

    nav
      height auto
      display inline-block
      font-size 40px

      a
        float left

        img.icon.home
          height 100px

        img.icon.more
          height 75px
          padding 20px

        &.signInButton
          padding 30px 0

      .searchBar
        display none

      button
        img
          &.more
            height 65px !important
            margin 25px

        span
          display none !important

    .menu
      top 111px
      right -291px

      a
        font-size 1.5em
        width 225px
        padding 20px

        &:first-of-type
          &:after
            border-width 25px
            margin-left 30px

          &:before
            border-width 27px
            margin-left 28px

    button
      &.sort
        height 65px
        width 65px
        margin 27px
        right -200px

        img
          height 65px !important
          top 0
          left 0

      span
        display none !important

    .container
      section
        h3
          width 100%
          position initial
          font-size 1.6em
          text-align center

        .content
          width 100%

          li
            a
              section
                &.info
                  width 100%
                  max-width initial

                  button.favorite
                    img.icon.star
                      height 45px

                  .banner
                    height 117px
                    width 117px

                    img
                      min-width 118px
                      height 118px

                  p.title
                    width 70%
                    white-space nowrap
                    text-overflow ellipsis
                    overflow hidden
                    height 50px

                    &.unauthenticated
                      width 80%

                &.details
                  display none

      .newBook
        height 120px
        width 120px
        padding 0
        margin 0
        line-height 1
        transform translateX(-50%)
        font-size 4em

    .book
      .info
        padding 0 30px

        .wrapper
          width 100%

          section
            button
              &.favorite
                margin 15px 0
                padding 8px 8px 8px 0

                img
                  height 50px

      .content-wrapper
        width 100%

        .content
          li.entry
            ul
              li.source
                p
                  border-radius 50px 50px 50px 0

              li.target
                p
                  border-radius 50px 50px 0 50px

        .addPhrase
          button
            height 120px
            width 120px
            padding 0

    .login
      h1
        margin 0

      ul.counter
        margin 45px auto 0

        li
          width 20px
          height 20px
          margin 7px

      .container
        form
          padding 0

          .grouping
            .input
              width 80%
              input
                font-size 40px

              label
                font-size 30px
          a
            margin 20px
            font-size 35px
            max-width 40%
            padding 20px
            float left
            text-align center

            &:last-of-type
              float right

    .version
      float none
      display inline-block

