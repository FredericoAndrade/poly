<div class="book">
  <div class="info">
    <div class="wrapper">
      {{#if session.isAuthenticated}}
        <section>
          <button class="favorite" {{action "favorite"}}>
            {{#if model.favorite}}
              <img class="icon star" src="/assets/images/icons/i_starred.svg" alt="favorite">
              {{else}}
              <img class="icon star" src="/assets/images/icons/i_unstarred.svg" alt="favorite">
            {{/if}}
          </button>
          <h1 title={{model.title}}>{{model.title}}</h1>
          <button class="deleteBook" {{action "deleteBook"}}>
            <img class="icon trash" src="/assets/images/icons/i_trash.svg" alt="favorite">
          </button>
        </section>
        {{else}}
        <h1>{{model.title}}</h1>
      {{/if}}
      {{#if model.author}}
        <h3>{{model.author}}</h3>
      {{/if}}
      {{#if model.description}}
        <p>{{model.description}}</p>
      {{/if}}
    </div>
  </div>

  {{#if model.banner}}
    <div class="bannerWrapper" style="background-image: url({{model.banner}})"></div>
  {{/if}}

  <div class="cardinality">
    <section>
      <h1 class="language source" title={{model.sourceLanguage}}>{{model.sourceLanguage}}</h1>
      <img class="icon cardinality" src="/assets/images/icons/i_cardinality.svg" alt="">
      <h1 class="language target" title={{model.targetLanguage}}>{{model.targetLanguage}}</h1>
    </section>
  </div>

  <section class="content-wrapper">
    <ul class="content">
      {{#each model.phrases}}
        <li class="entry">
          <ul>
            {{#if sourcePhrase}}
            <li class="source">
              <p>{{sourcePhrase}}</p>
            </li>
            {{/if}}
            {{#if targetPhrase}}
            <li class="target">
              <p>{{targetPhrase}}</p>
            </li>
            {{/if}}
          </ul>
        </li>
        {{else}}
        <p class="empty">Shoot! There is nothing here!</p>
      {{/each}}
    </ul>
    {{#if session.isAuthenticated}}
      <div class="addPhrase open">
        <button {{action "addPhrase"}}>+</button>
      </div>
      <div class="newPhrase">
        {{input class="input source" value=model.sourcePhrase placeholder="Source Phrase"}}
        {{input class="input target" value=model.targetPhrase placeholder="Target Phrase"}}
        <a class="icon save saveSource" {{action "saveSource"}} title="Save">+</a>
        <a class="icon save saveTarget" {{action "saveTarget"}} title="Save">+</a>
      </div>
    {{/if}}
  </section>
</div>