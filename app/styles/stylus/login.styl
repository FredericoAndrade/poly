.login
  width 600px
  background white
  boxShadow()
  padding 40px 0
  display block
  border-radius $radius
  margin auto
  overflow auto

  h1
    width 100%
    text-align center
    font-size 3em
    font-weight 100

  p
    width 60%
    margin auto

  a
    cursor pointer
    color lighten($blue, 35%)
    width 100%
    display inline-block
    text-align center

  .container
    position relative
    transition margin-left $time*2 ease-in-out

    form
      float left
      width 600px
      padding 0 40px

      &.resetPassword
        button
          margin-top 140px