.book
  &.new
    display inline-block

    input, textarea
      border none
      width 100%
      border-bottom 2px solid transparent
      float left

      &.missing
        ::placeholder
          color red

      &:focus
        outline none
        border-color $hover

    .info
      .title
        font-size 2em
        margin 0.375em 0

      .description
        margin 2em 0
        resize vertical
        font-size 1em

    .banner
      width 100%

    .cardinality
      section
        input
          width 50%
          text-align center
          float left
          background transparent
          font-size 1.5em
          padding .8em 0 .1em
          margin-top 1px
          margin-bottom .4em

    .content-wrapper
      height 27.5%
      position relative

      .dummy.content
        pointer-events none
        .entry
          ul
            li
              p
                color transparent
                cursor default

                // &::selection
                //   background transparent

              &.source
                p
                  background lighten($source, 70%)
                  border-color lighten($source, 68%)

              &.target
                p
                  background lighten($target, 70%)
                  border-color lighten($target, 68%)

          &:hover
            background transparent
            border-top-color transparent
            border-bottom-color transparent

        &:hover
            background transparent
            border-top-color transparent
            border-bottom-color transparent


      .startBook
        position absolute
        background $buttonBlue
        color white
        border none
        font-size 1em
        padding .9em 1.4em
        font-weight 100
        display block
        cursor pointer
        z-index 10
        bottom 0
        width 100%
        border-radius 0
        margin-bottom 0
        transition margin-bottom $time ease-in-out

        &.disabled
          margin-bottom -70px