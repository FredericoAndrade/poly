button.sort
  height 45px
  width 45px
  outline none
  background transparent
  border none
  padding 0
  cursor pointer
  position absolute
  top 0
  right 90px
  z-index 6
  margin 8px

  img
    position absolute
    z-index 1
    top 5px
    left 5px

  .buttonBackground
    height 0px
    width 0px
    display block
    position absolute
    top 0
    left 0
    z-index 0
    background #f7f7f7
    margin 29.5px
    border-radius 100%
    transition all $time ease-in-out

  &:hover
    .buttonBackground
      height 45px
      width 45px
      margin 0px

.dashboard
  float left
  width 100%

  h3
    position absolute
    margin 0
    padding 1em
    font-weight 100
    color $secondary-blue

  section
    ul
      background #fff
      padding 0
      margin 0 auto
      list-style-type none
      width 55%
      min-width 700px
      box-shadow 0 1px 2px rgba(0,0,0,0.1)
      transition background $time*2 ease-in-out

      &:hover
        background lighten(#E7EFF2, 80%)

      &.sort
        padding 15px
        position relative
        z-index 4
        left 50%
        transform translateX(-50%)
        width 53%
        min-width 680px
        display inline-block

        &:hover
          background #fff

        li
          float left
          font-size 14px
          width (100/6)%

          &.favorite
            a
              img
                width 15px
                height 15px
                padding 0


          a
            margin 0 5px
            float left
            text-decoration none

            cursor pointer

            &.active
              border-color darken($hover, 10%)

            &:hover
              color #ccc

      li
        font-size 1.5em
        overflow hidden
        display table

        &.content
          border-bottom 1px solid lighten(#E7EFF2, 75%)
          width 100%
          transition background $time*2 ease-in-out

          &:last-of-type
            border-radius 0 0 $radius $radius

          &:hover
            background #fff
            border-bottom-color lighten(#E7EFF2, 55%)

          a
            display inline-block
            width 100%
            height 100%
            float left

            img
              float left
              margin 30px

            p
              margin 34px 0 34px 20px
              float left
              width 320px
              overflow hidden
              text-overflow ellipsis
              white-space nowrap

              &.unauthenticated
                width 370px

            section
              height 100%

              &.info
                width 70%
                float left
                display inline-block

                .banner
                  float left
                  margin 0
                  height 100px
                  width 100px
                  display inline-block
                  overflow hidden
                  background #62eaba
                  background -moz-linear-gradient(-45deg, #62eaba 0%, #24c9b3 100%)
                  background -webkit-linear-gradient(-45deg, #62eaba 0%,#24c9b3 100%)
                  background linear-gradient(135deg, #62eaba 0%,#24c9b3 100%)
                  position relative

                  img
                    margin 0
                    position absolute
                    left 50%
                    transform translateX(-50%)
                    min-width 100px
                    height 100px

                button
                  &.favorite
                    float left
                    padding 4px 0 0 0
                    margin 34px 0 34px 20px
                    border none
                    cursor pointer
                    background transparent
                    border-radius 100%
                    outline none

                    &:active
                      padding-top 9px

                    img.star
                      height 25px
                      float left
                      margin 0
                      padding 0

              &.details
                width 30%
                float right
                position relative

                .language
                  float left
                  width 100%

                  p
                    text-align center
                    float none
                    padding 0 10px
                    font-size .7em
                    width 100%
                    line-height 1.9
                    margin 9px 0

                img
                  float left
                  margin 0
                  padding 4px
                  position absolute
                  right 50%
                  top 50%
                  transform translateX(50%) translateY(-50%) rotateZ(90deg)

  .newBook
    position fixed
    bottom .5em
    left 50%
    margin-left -30px
    materialButton()