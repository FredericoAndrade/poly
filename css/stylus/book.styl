.book
  width 100%
  background #eee

  .info, .cardinality, img.banner
    display inline-block
    width 100%
    background #fff

  .info, .cardinality, img.banner
    float left

  .info
    position relative
    padding 0 65px

    img.star
      position absolute
      top 0
      left 0
      margin 15px
      width 35px

    h1
      float left
      margin .4em 0

    h3
      line-height 2.4em
      margin-bottom 0
      float right

    p
      padding 2em 0
      margin 0
      float left

  .cardinality
    border-bottom 3px solid rgba(0,0,0,0.1)

    section
      width 600px
      display table
      float none
      margin auto

    h1
      width 50%
      float left
      text-align center

    img
      border-bottom none
      float left
      margin 1.1em -20px
      width 40px
      height 40px
      padding 10px
      background #fff
      // border-radius 100%
      position relative
      z-index 10
