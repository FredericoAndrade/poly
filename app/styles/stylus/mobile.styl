/* ----------- iPhone 6 ----------- */

/* Portrait and Landscape */
@media only screen and (min-device-width 375px) and (max-device-width 667px) and (-webkit-min-device-pixel-ratio 2)
  html
    width 700px
    font-size 26px

    nav
      padding 0
      height auto
      display inline-block
      font-size 40px

      a
        float left

        img.icon.home
          height 75px

        img.icon.more
          height 75px
          padding 20px

    .container
      section
        h3
          width 100%
          position initial

        .content
          width 100%

          li
            a
              section
                &.info
                  width 100%
                  max-width initial

                  button.favorite
                    img.icon.star
                      height 45px

                  p.title
                    width 90%
                    white-space nowrap
                    text-overflow ellipsis
                    overflow hidden
                    height 50px

                &.details
                  display none

      .newBook
        height 120px
        width 120px
        padding 0
        margin 0
        line-height 1
        transform translateX(-50%)
        font-size 4em

    .book
      .content-wrapper
        width 100%

        .content
          li.entry
            ul
              li.source
                p
                  border-radius 50px 50px 50px 0

              li.source
                p
                  border-radius 50px 50px 0 50px

        .addPhrase
          button
            height 120px
            width 120px
            padding 0

    .login
      h1
        margin 0

      ul.counter
        margin 45px auto 0

        li
          width 20px
          height 20px
          margin 7px

      .container
        form
          padding 0

          .grouping
            .input
              width 80%
              input
                font-size 40px

              label
                font-size 30px
          a
            margin 20px
            font-size 35px
            max-width 40%
            padding 20px
            float left
            text-align center

            &:last-of-type
              float right



